{
  "extends": "../../node_modules/gts",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "env": {
    "node": true,
    "jest": true
  },
  "ignorePatterns": [
    "build/"
  ],
  "overrides": [
    {
      "files": [
        "**/test/**/*.ts",
        "**/*.test.ts",
        "**/jest.globalSetup.ts",
        "**/jest.globalTeardown.ts",
        "**/jest.setup.ts"
      ],
      "rules": {
        "n/no-unpublished-import": "off",
        "n/no-extraneous-import": "off"
      }
    }
  ]
}