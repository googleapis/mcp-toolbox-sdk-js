{
  "name": "toolbox-js-sdks",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "npm run lint --workspaces",
    "fix": "npm run fix --workspaces",
    "test:unit": "npm run test:unit --workspaces",
    "test:e2e": "npm run test:e2e --workspaces",
    "coverage": "npm run coverage --workspaces",

    "build:core": "npm run build -w @toolbox-sdk/core",
    "build:adk": "npm run build -w @toolbox-sdk/adk",
    "build": "npm run build:core && npm run build:adk"
  },
  "devDependencies": {
    "@google-cloud/secret-manager": "^6.1.1",
    "@google-cloud/storage": "^7.17.2",
    "@jest/globals": "^30.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/tmp": "^0.2.6",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "fs-extra": "^11.3.2",
    "google-auth-library": "^10.4.2",
    "gts": "^6.0.2",
    "jest": "^30.2.0",
    "tmp": "^0.2.5",
    "ts-jest": "^29.4.5",
    "typescript": "^5.8.3"
  }
}
