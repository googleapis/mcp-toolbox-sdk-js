{
  "extends": "./node_modules/gts",
  "parserOptions": {
    "project": [
      "./packages/toolbox-core/tsconfig.json",
      "./packages/toolbox-adk/tsconfig.json"
    ]
  },
  "env": {
        "node": true,
        "jest": true
    },
    "overrides": [
        {
          "files": [
            "**/test/**/*.ts",
            "**/*.test.ts",
            "**/jest.globalSetup.ts",
            "**/jest.globalTeardown.ts",
            "**/jest.setup.ts"
          ],
          "rules": {
            "n/no-unpublished-import": "off"
          }
        }
    ]
}