{
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "testMatch": [
        "<rootDir>/test/e2e/*.e2e.ts"
    ],
     "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.test.json"
        }
      ]
    },
    "globalSetup": "<rootDir>/build/test/e2e/jest.globalSetup.js",
    "globalTeardown": "<rootDir>/build/test/e2e/jest.globalTeardown.js",
    "testTimeout": 60000,
    "collectCoverage": false,
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^@toolbox-sdk/core$": "<rootDir>/../toolbox-core/src/index.js"
    }
}
